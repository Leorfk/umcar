<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControleAutomovel</servlet-name>
        <servlet-class>br.com.umcar.controller.ControleAutomovel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleUsuario</servlet-name>
        <servlet-class>br.com.umcar.controller.ControleUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleLogin</servlet-name>
        <servlet-class>br.com.umcar.controller.ControleLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleCliente</servlet-name>
        <servlet-class>br.com.umcar.controller.ControleCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleTransacao</servlet-name>
        <servlet-class>br.com.umcar.controller.ControleTransacao</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControleAutomovel</servlet-name>
        <url-pattern>/ControleAutomovel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleUsuario</servlet-name>
        <url-pattern>/ControleUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleLogin</servlet-name>
        <url-pattern>/ControleLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleCliente</servlet-name>
        <url-pattern>/ControleCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleTransacao</servlet-name>
        <url-pattern>/ControleTransacao</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <login-config>
        <auth-method>DIGEST</auth-method>
    </login-config>
</web-app>
